{
  "model_name": "jepa_initial5",
  "paths": {
    "checkpoint_root": "checkpoints",
    "log_root": "logs"
  },
  "dataset": {
    "root_path": "Data/polygon",
    "data_path": "data_raw_1m",
    "start_date": null,
    "split": "train",
    "context_len": 512,
    "target_len": 48,
    "use_time_features": true,
    "rolling_window": 252,
    "train_split": 0.7,
    "test_split": 0.15,
    "regular_hours_only": true,
    "timeframe": "15min"
  },
  "training": {
    "epochs": 100,
    "batch_size_train": 256,
    "batch_size_eval": 256,
    "learning_rate": 0.0003,
    "log_every": 500,
    "checkpoint_every_epochs": 10,
    "amp": true,
    "grad_clip": 1.0,
    "num_workers": 8,
    "pin_memory": true,
    "drop_last_train": false,
    "drop_last_eval": false,
    "persistent_workers": true,
    "prefetch_factor": 2,
    "warmup_epochs": 50
  },
  "jepa_model": {
    "patch_len": 8,
    "patch_stride": 8,
    "d_model": 192,
    "n_features": 9,
    "n_time_features": 2,
    "nhead": 4,
    "num_layers": 4,
    "dim_ff": 768,
    "dropout": 0.0,
    "add_cls": true,
    "pooling": "cls",
    "pred_len": 48,
    "ema_tau_min": 0.99,
    "ema_tau_max": 0.999,
    "use_asset_embeddings": true
  },
  "loss": {
    "loss_type": "mse",
    "var_loss": false,
    "var_loss_gamma": 1.0,
    "var_loss_weight": 0.0
  }
}

